{
  "overrides": [
    {
      "files": [
        "src/**/*.ts"
      ]
    }
  ],
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "jest",
    "prettier"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "prettier/prettier": "error"
  },
  "ignorePatterns": [
    "dist/*"
  ],
  "globals": {
    "require": "readonly"
  },
  "env": {
    "browser": true,
    "jest/globals": true
  }
}
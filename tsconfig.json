{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*-test.ts"
  ],
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "types": [],
    "outDir": "./dist",
    "strict": true,
    "stripInternal": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "importHelpers": false,
    "noImplicitAny": true,
    "noUnusedLocals": true
  }
}
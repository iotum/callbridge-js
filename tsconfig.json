{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "src"
  ],
  "exclude": [
    "**/*-test.ts"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "importHelpers": false,
    "noImplicitAny": true,
    "noUnusedLocals": true
  }
}